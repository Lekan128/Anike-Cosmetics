<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="22dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/sellerPriceCard"
        style="@style/PricePickCardStyle"
        android:layout_width="158dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/green">

        <TextView
            android:id="@+id/textView"
            style="@style/PricePickTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seller_price" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/jumiaPriceCard"
        style="@style/PricePickCardStyle"
        android:layout_width="158dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/off_pink">

        <TextView
            android:id="@+id/textView2"
            style="@style/PricePickTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jumia_price" />
    </androidx.cardview.widget.CardView>
</LinearLayout>