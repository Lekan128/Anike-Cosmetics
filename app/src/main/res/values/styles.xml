<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InfoTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">top</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PricePickCardStyle" parent="CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="PricePickTextViewStyle" parent="InfoTextView">
        <item name="android:layout_gravity">center</item>
    </style>
</resources>